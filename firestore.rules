rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // User profiles
    match /userProfiles/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Credits collection
    match /credits/{userId} {
      allow read: if isOwner(userId);
      allow write: if false; // Solo el servidor puede escribir
    }

    // Transactions
    match /transactions/{transactionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if false; // Solo el servidor puede escribir
    }

    // Face swaps
    match /faceSwaps/{faceSwapId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if false; // Solo el servidor puede escribir
    }

    // Templates - Lectura p√∫blica, escritura solo admin
    match /templates/{templateId} {
      allow read: if true; // P√∫blico para todos
      allow write: if false; // Solo el servidor puede escribir
    }

    // üÜï PUBLIC GALLERY - Nueva colecci√≥n
    match /publicGallery/{galleryItemId} {
      // Lectura p√∫blica para todos
      allow read: if true;

      // Escritura: Solo el servidor puede crear/actualizar
      // (a trav√©s de la API /api/gallery/publish)
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    // Screener questions
    match /screenerQuestions/{questionId} {
      allow read: if true;
      allow write: if false; // Solo el servidor puede escribir
    }

    // User screener answers
    match /userScreenerAnswers/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    // Preferences
    match /preferences/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
